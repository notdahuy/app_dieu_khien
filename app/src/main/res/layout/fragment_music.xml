<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_music_24"
                android:tint="#FFFFFF"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/tvNowPlaying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Now Playing: (none)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Visualizer -->
        <com.example.ws2812_controller.ui.VisualizerBarsView
            android:id="@+id/visualizerBars"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="#26FFFFFF" />

        <!-- Nút điều khiển -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMusic"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Add"
                android:insetTop="8dp"
                android:insetBottom="8dp"
                app:icon="@drawable/ic_add_24"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlay"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Play"
                android:textSize="10sp"
                android:layout_marginStart="7dp"
                app:icon="@drawable/ic_play_24"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPause"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Pause"
                android:textSize="9sp"
                android:layout_marginStart="7dp"
                app:icon="@drawable/ic_pause_24"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="10sp"
                android:layout_marginStart="7dp"
                app:icon="@drawable/ic_stop_24"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Độ nhạy + Reactive + Mode -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSensitivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensitivity: 60%"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <SeekBar
                    android:id="@+id/seekSensitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="60"/>

                <Switch
                    android:id="@+id/switchReactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reactive"
                    android:checked="true"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipsMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSpectrum"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPECTRUM"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBeat"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEAT"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEnergy"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENERGY"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Spinner cũ (ẩn) để không phải sửa logic nếu bạn vẫn tham chiếu -->
            <Spinner
                android:id="@+id/spnMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Playlist -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#26FFFFFF"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Playlist"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <ListView
                android:id="@+id/lvPlaylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#33FFFFFF"
                android:dividerHeight="1dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
