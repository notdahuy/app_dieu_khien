<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvWifiConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_effect_bg"
            android:gravity="center"
            android:text="Cài đặt WiFi"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:text="Chọn ESP32-LED-XXXX để thiết lập"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvWifiConfig" />

        <Button
            android:id="@+id/btnFindEsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvConnectionStatus"
            android:text="Tìm thiết bị"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

        <!-- Scan Button -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quét tìm Wifi"
            app:layout_constraintTop_toBottomOf="@id/btnFindEsp" />

        <!-- Networks List Label -->
        <TextView
            android:id="@+id/tvNetworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Các mạng khả dụng:"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnClearCredentials" />

        <!-- Networks RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNetworks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNetworks" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/btnClearCredentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên kết nối hiện tại"
            android:backgroundTint="#E74A41"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnScan" />

        <!-- Progress Overlay -->
        <FrameLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>